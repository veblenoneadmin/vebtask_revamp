  "name": "vebtask-fresh",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && vite",
    "build": "cd backend && npx prisma generate && cd ../frontend && tsc -b && vite build",
    "lint": "cd frontend && eslint .",
    "preview": "cd frontend && vite preview",
    "start": "cd backend && node server.js",
    "db:generate": "cd backend && prisma generate",
    "db:migrate": "cd backend && prisma migrate dev",
    "db:deploy": "cd backend && prisma migrate deploy",
    "db:reset": "cd backend && prisma db push --force-reset",
    "db:studio": "cd backend && prisma studio",
    "db:seed": "cd backend && node scripts/backfill-orgs.js",
    "db:seed-demo": "cd backend && node scripts/seed-demo-data.js",
    "db:seed-veblen": "cd backend && node scripts/seed-veblen-data.js",
    "db:seed-project-demo": "cd backend && node scripts/seed-project-task-demo.js",
    "postinstall": "cd backend && prisma generate"
  },
